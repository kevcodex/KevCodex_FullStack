#set("content") {
    <main>
        <section>

            <!--Grid row-->
            <div class="row mb-5">

                #if(hikes) {
                    #for(hike in hikes) {

                    <!--Grid column-->
                    <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">

                        <!-- fix mobile bug where clicking will immediately open link? -->
                        <h1>#(hike.title)</h1>
                        <div class="view overlay">
                            <img src="https://mdbootstrap.com/img/Photos/Others/forest-sm.jpg" class="img-fluid " alt="sample image">
                            <div class="mask flex-center rgba-blue-light">
                                <p class="white-text">#(hike.description)</p>
                                <a href="/api/games">testest</a>
                            </div>
                        </div>
                    </div>
                    <!--Grid column-->

                    }
                } else {
                    <h2>There arenâ€™t any hikes data yet!</h2>
                }
            </div>
        </section>
    </main>
}

