#set("content") {
    <div class="container mt-4">
        <main>
            <div class="jumbotron p-3 p-md-5 rounded">
                <div class="col-md-6 px-0">
                    <h1 class="display-4 font-italic">Hikes I have done</h1>
                    <p class="lead my-3">Hi there! My girfriend and I enjoy hiking and will usually go out about once a month. Here's a list of some of the hikes we have done. Before any hike, make sure you are adequetly prepared based on weather, fitness, mood, etc.</p>               
                </div>
            </div>
            <section>

                <!--Grid row-->
                <div class="row mb-5">

                    #if(hikes) {
                        #for(hike in hikes) {

                        <!--Grid column-->
                        <div class="col-lg-6 col-md-12 mb-4 mb-lg-0">

                            <!-- fix mobile bug where clicking will immediately open link? -->
                            
                            <div class="view overlay mb-4">
                                <a href= "hiking/#(hike._id)" class="">
                                    <img src="#(hike.imageURLString)" class="img-fluid"  alt="Image">
                                    <div class="mask flex-center rgba-blue-light text-center">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h2 class="text-center white-text">#(hike.title)</h2>
                                                <p class="white-text">#(hike.shortDescription)</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <!--Grid column-->

                        }
                    } else {
                        <h2>There arenâ€™t any hikes data yet!</h2>
                    }
                </div>
            </section>
        </main>
    </div>
} 

#embed("base")

<script>

    // For mobile prevent instant opening on click
    $("a").on("click", function (event) {
        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent)) {
            if ($(this).find(".mask").css("opacity") < 1) {
                event.preventDefault();
            }
        }
    });

</script>
